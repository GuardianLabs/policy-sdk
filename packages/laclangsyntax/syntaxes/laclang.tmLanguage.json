{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "LacLang",
    "fileTypes": [".lac"],
    "patterns": [
        {
            "name": "comment.line.double-slash",
            "match": "//.*$"
        },
        {
            "name": "keyword.control.declaration",
            "match": "\\b(var|constant|artifact|instance|evaluate|of|takes|with|inject)\\b"
        },
        {
            "name": "storage.type.datatype",
            "match": "\\b(bool|number|string|bytes|address)\\b"
        },
        {
            "name": "constant.language.boolean",
            "match": "\\b(true|false)\\b"
        },
        {
            "name": "constant.numeric.decimal",
            "match": "\\b\\d+\\b"
        },
        {
            "name": "constant.other.address",
            "match": "0x[0-9a-fA-F]{40}\\b"
        },
        {
            "name": "string.quoted.double",
            "match": "\".*?\""
        },
        {
            "name": "string.quoted.single",
            "match": "'.*?'"
        },
        {
            "name": "variable.name",
            "match": "\\b[a-zA-Z_][a-zA-Z_0-9]*\\b"
        }
    ],
	"scopeName": "source.laclang"
}