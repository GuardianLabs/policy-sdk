{
  "name": "@guardian-network/policy-compiler",
  "author": "",
  "description": "Artifcts high level declaration language",
  "version": "0.1.0",
  "main": "index.ts",
  "engines": {
    "node": ">=18.20.4"
  },
  "scripts": {
    "antlr": "antlr4ts ./grammar/LacLang.g4 -o ./src/dsl/antlr/generated",
    "antlr:make": "pnpm antlr && pnpm format:ts:fix",
    "build": "tsc -p tsconfig-prod.json && pnpm format:all:fix && pnpm copy-dts",
    "build:dev": "tsc -p tsconfig.json && pnpm format:all:fix && pnpm copy-dts",
    "check:ts": "tsc -p tsconfig-prod.json --noEmit",
    "check:ts:dev": "tsc -p tsconfig.json --noEmit",
    "clean": "pnpm remove:dist",
    "copy-dts": "copyfiles -u 1 \"src/**/*.d.ts\" dist",
    "format:all:fix": "pnpm format:ts:fix",
    "format:ts:fix": "prettier -w -c \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint:ts": "eslint",
    "lint:ts:fix": "eslint --fix",
    "remove:dist": "npx rimraf dist",
    "test": "mocha",
    "test:onchain": "pnpm exec hardhat test --bail test/compiler-onchain-types.test.ts"
  },
  "keywords": [],
  "devDependencies": {
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.13.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.8",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@types/chai": "4.3.3",
    "@types/mocha": "^10.0.9",
    "@types/node": "^22.8.0",
    "@typescript-eslint/eslint-plugin": "^8.8.0",
    "@typescript-eslint/parser": "^8.8.0",
    "antlr4ts": "0.5.0-alpha.4",
    "antlr4ts-cli": "0.5.0-alpha.4",
    "chai": "^4.5.0",
    "copyfiles": "^2.4.1",
    "eslint": "^9.11.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-mocha": "^10.5.0",
    "eslint-plugin-n": "^17.10.3",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-promise": "^7.1.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "globals": "^15.11.0",
    "hardhat": "^2.22.15",
    "hardhat-deploy": "^0.12.4",
    "mocha": "^10.8.2",
    "prettier": "^3.3.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "rimraf": "^6.0.1"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "ethers": "^6.13.3",
    "generator-code": "^1.11.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2"
  }
}
