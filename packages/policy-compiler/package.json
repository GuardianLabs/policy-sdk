{
  "name": "@guardian-network/artifacts-dsl",
  "author": "",
  "description": "Artifcts high level declaration language",
  "version": "0.1.0",
  "main": "index.ts",
  "engines": {
    "node": ">=18.20.4"
  },
  "scripts": {
    "build": "tsc -p tsconfig-prod.json && pnpm format:all:fix && pnpm copy-dts",
    "build:dev": "tsc -p tsconfig.json && pnpm format:all:fix && pnpm copy-dts",
    "clean": "pnpm remove:dist",
    "copy-dts": "copyfiles -u 1 \"src/**/*.d.ts\" dist",
    "format:all:fix": "pnpm format:ts:fix",
    "format:ts:fix": "prettier -w -c \"src/**/*.ts\" \"test/**/*.ts\" \"config/**/*.ts\" \"dsl/**/*.ts\" \"ir/**/*.ts\"",
    "remove:dist": "npx rimraf dist",
    "antlr": "antlr4ts ./dsl/grammar/LacLang.g4 -o ./dsl/antlr/generated",
    "test": "mocha"
  },
  "keywords": [],
  "devDependencies": {
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.13.0",
    "@types/chai": "^5.0.0",
    "@types/mocha": "^10.0.9",
    "@types/node": "^22.8.0",
    "@typescript-eslint/eslint-plugin": "^8.8.0",
    "@typescript-eslint/parser": "^8.8.0",
    "chai": "^5.1.2",
    "copyfiles": "^2.4.1",
    "eslint": "^9.11.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-mocha": "^10.5.0",
    "eslint-plugin-n": "^17.10.3",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-promise": "^7.1.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "globals": "^15.11.0",
    "mocha": "^10.7.3",
    "prettier": "^3.3.3",
    "prettier-plugin-organize-imports": "^4.1.0"
  },
  "dependencies": {
    "@ethersproject/abi": "^5.7.0",
    "@nomicfoundation/ethereumjs-util": "^9.0.4",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "antlr4ts": "0.5.0-alpha.4",
    "antlr4ts-cli": "0.5.0-alpha.4",
    "dotenv": "^16.4.5",
    "ethers": "^6.13.3",
    "generator-code": "^1.11.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2",
    "utils": "link:ethers/lib/utils"
  }
}
