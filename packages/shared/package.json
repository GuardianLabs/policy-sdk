{
  "name": "@guardian-network/shared",
  "author": "grabovski",
  "description": "A shared tools, types, interfaces of Policy SDK",
  "version": "0.1.0",
  "main": "index.ts",
  "engines": {
    "node": ">=18.20.4"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json && pnpm format:all:fix && pnpm copy-dts",
    "check": "pnpm lint:ts && pnpm check:ts",
    "check:ts": "tsc -p tsconfig.json --noEmit",
    "clean": "pnpm remove:dist",
    "copy-dts": "copyfiles -u 1 \"src/**/*.d.ts\" dist",
    "format:all:fix": "pnpm format:ts:fix",
    "format:ts:fix": "prettier -w -c \"src/**/*.ts\"",
    "lint:ts": "eslint",
    "lint:ts:fix": "eslint --fix",
    "remove:dist": "npx rimraf dist"
    "tests:coverage:ts": "nyc pnpm test"
  },
  "keywords": [],
  "devDependencies": {
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.13.0",
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/node": "^22.8.0",
    "@typescript-eslint/eslint-plugin": "^8.8.0",
    "@typescript-eslint/parser": "^8.8.0",
    "copyfiles": "^2.4.1",
    "eslint": "^9.11.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-mocha": "^10.5.0",
    "eslint-plugin-n": "^17.10.3",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-promise": "^7.1.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "globals": "^15.11.0",
    "nyc": "^17.1.0",
    "prettier": "^3.3.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "rimraf": "^6.0.1"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "ethers": "^6.13.3",
    "typescript": "^5.6.2"
  }
}
