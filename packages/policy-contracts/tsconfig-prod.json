{
  "compilerOptions": {
    "target": "es2023",
    "module": "commonjs",
    "noImplicitAny": true,
    "strict": true,
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "Node16"
  },
  "include": ["./src/**/*"]
}
